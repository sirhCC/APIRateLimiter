# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Default Rate Limiting Configuration
DEFAULT_WINDOW_MS=60000
DEFAULT_MAX_REQUESTS=100
DEFAULT_ALGORITHM=sliding-window

# Monitoring
MONITORING_ENABLED=true
STATS_RETENTION_MS=3600000

# Rate Limit Rules (JSON format)
# RATE_LIMIT_RULES=[{"id":"api-strict","name":"Strict API Rate Limit","pattern":"^/api/.*","method":"POST","config":{"windowMs":60000,"max":10,"algorithm":"sliding-window"},"enabled":true,"priority":100}]

# Security & IP Filtering
ENABLE_TRUST_PROXY=true
API_KEY_HEADER=x-api-key
IP_WHITELIST=127.0.0.1,::1
IP_BLACKLIST=
