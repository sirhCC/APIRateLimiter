# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# TypeScript, JavaScript
[*.{ts,js,mjs,cjs}]
indent_style = space
indent_size = 2
quote_type = single

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# Package files
[package.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab

# Docker
[Dockerfile*]
indent_style = space
indent_size = 2

# Test files
[*.test.{ts,js}]
indent_style = space
indent_size = 2

# Config files
[*.config.{ts,js}]
indent_style = space
indent_size = 2
