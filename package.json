{
  "name": "api-rate-limiter",
  "version": "1.0.0",
  "description": "Standalone rate limiting service for any API with Redis backend",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "clean": "rimraf dist",
    "prepublish": "npm run clean && npm run build",
    "test": "jest --testPathPatterns=unit",
    "test:simple": "jest --testPathPatterns=unit",
    "test:coverage": "jest --coverage --testPathPatterns=unit",
    "test:unit": "jest --testPathPatterns=unit",
    "test:integration": "jest --testPathPatterns=integration --collectCoverage=false --passWithNoTests",
    "test:e2e": "jest --testPathPatterns=e2e --collectCoverage=false --passWithNoTests",
    "test:manual": "node tests/test-setup.js",
    "test:setup": "cross-env echo \"Make sure Redis is running, then run 'npm run dev' in another terminal and 'npm test'\"",
    "test:sensitive": "node tests/test-sensitive-rate-limiting.js",
    "test:validation": "node tests/test-validation.js",
    "test:chaos": "jest --testPathPatterns=chaos-engineering --collectCoverage=false --passWithNoTests",
    "test:enhanced": "jest --testPathPatterns=enhanced-coverage --collectCoverage=false --passWithNoTests",
    "test:load": "k6 run tests/load-test.js",
    "test:all": "npm run test:simple",
    "test:ci": "jest --coverage --ci --watchAll=false --testPathPatterns=unit",
    "setup:production": "node scripts/production-setup.js",
    "setup": "node scripts/production-setup.js",
    "security:audit": "node scripts/security-cli.js audit",
    "security:fix": "node scripts/security-cli.js fix",
    "security:generate": "node scripts/security-cli.js generate",
    "security:validate": "node scripts/security-cli.js validate"
  },
  "keywords": [
    "rate-limiting",
    "api",
    "redis",
    "express",
    "middleware",
    "proxy",
    "throttling"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/jsonwebtoken": "^9.0.10",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
  "prom-client": "^15.1.3",
    "redis": "^5.6.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.11"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "axios": "^1.11.0",
    "cross-env": "^10.0.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
