# Test Environment Configuration
# This file contains environment variables specifically for testing

NODE_ENV=test
PORT=3001

# Redis Configuration for Testing
REDIS_URL=redis://localhost:6379
REDIS_DB=15
REDIS_TIMEOUT=5000

# Security Configuration for Testing
JWT_SECRET=test-jwt-secret-do-not-use-in-production-12345678901234567890
API_KEY_SECRET=test-api-key-secret-do-not-use-in-production-12345678901234567890

# CORS Configuration for Testing
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Rate Limiting Configuration for Testing
DEFAULT_RATE_LIMIT=1000
DEFAULT_WINDOW_MS=60000

# Logging Configuration for Testing
LOG_LEVEL=error

# Performance Configuration for Testing
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=1.0
